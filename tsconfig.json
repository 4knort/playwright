{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "lib": ["es6", "dom", "es2017"],
    "paths": {},
    "baseUrl": "./tests",
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "resolveJsonModule": true
  }
}
